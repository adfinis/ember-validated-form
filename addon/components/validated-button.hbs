{{#if (has-block)}}
  <this.buttonComponent
    @onClick={{this.click}}
    @loading={{this.loading}}
    @disabled={{or @disabled this.loading}}
    @label={{@label}}
    @type={{@type}}
    ...attributes
  >{{yield}}</this.buttonComponent>
{{else}}
  <this.buttonComponent
    @onClick={{this.click}}
    @loading={{this.loading}}
    @disabled={{or @disabled this.loading}}
    @label={{@label}}
    @type={{@type}}
    ...attributes
  />
{{/if}}