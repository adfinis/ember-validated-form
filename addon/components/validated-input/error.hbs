{{#if (macroCondition (macroGetOwnConfig "isUikit"))}}
  <small id={{@id}} class="uk-text-danger" ...attributes>
    {{yield}}{{this.errorString}}
  </small>
{{else}}
  <span
    id={{@id}}
    class={{if
      (macroCondition (macroGetOwnConfig "isBootstrap"))
      "d-block invalid-feedback"
    }}
    ...attributes
  >
    {{yield}}{{this.errorString}}
  </span>
{{/if}}