<textarea
  class={{evf-class-list
    (if
      (evf-theme "uikit")
      (evf-class-list
        "uk-textarea"
        (if @isValid "uk-form-success")
        (if @isInvalid "uk-form-danger")
      )
    )
    (if
      (evf-theme "bootstrap")
      (evf-class-list
        "form-control" (if @isValid "is-valid") (if @isInvalid "is-invalid")
      )
    )
  }}
  {{on "input" this.onUpdate}}
  {{on "blur" @setDirty}}
  ...attributes
>
</textarea>