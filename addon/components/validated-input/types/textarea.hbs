<textarea
  class={{this.class}}
  value={{@value}}
  placeholder={{@placeholder}}
  name={{@name}}
  id={{@inputId}}
  disabled={{@disabled}}
  autofocus={{@autofocus}}
  rows={{@rows}}
  cols={{@cols}}
  autocomplete={{@autocomplete}}
  {{on "input" this.onUpdate}}
  {{on "blur" @setDirty}}
>

</textarea>