{
  "name": "ember-validated-form",
  "version": "5.3.0",
  "description": "Easily create forms with client-side validations",
  "keywords": [
    "ember-addon",
    "forms",
    "form validation",
    "validation messages"
  ],
  "repository": "https://github.com/adfinis-sygroup/ember-validated-form",
  "license": "MIT",
  "author": "Adfinis SyGroup AG <info@adfinis-sygroup.ch>",
  "directories": {
    "test": "tests"
  },
  "homepage": "https://docs.adfinis.com/ember-validated-form",
  "bugs": {
    "url": "https://github.com/adfinis-sygroup/ember-validated-form/issues"
  },
  "scripts": {
    "build": "ember build --environment=production",
    "lint": "npm-run-all --aggregate-output --continue-on-error --parallel \"lint:!(fix)\"",
    "lint:fix": "npm-run-all --aggregate-output --continue-on-error --parallel lint:*:fix",
    "lint:hbs": "ember-template-lint .",
    "lint:hbs:fix": "ember-template-lint . --fix",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "start": "ember serve",
    "test": "npm-run-all lint test:*",
    "test:ember": "ember test",
    "test:ember-compatibility": "ember try:each",
    "prepare": "husky install"
  },
  "dependencies": {
    "@glimmer/component": "^1.0.4",
    "@glimmer/tracking": "^1.0.4",
    "ember-auto-import": "^2.4.0",
    "ember-changeset": "^4.0.0",
    "ember-changeset-validations": "^4.0.0",
    "ember-cli-babel": "^7.26.11",
    "ember-cli-htmlbars": "^6.0.1",
    "ember-truth-helpers": "^3.0.0"
  },
  "devDependencies": {
    "@adfinis-sygroup/eslint-config": "1.5.0",
    "@adfinis-sygroup/semantic-release-config": "3.4.0",
    "@ember/optional-features": "2.0.0",
    "@ember/test-helpers": "2.6.0",
    "@embroider/test-setup": "1.5.0",
    "@fortawesome/ember-fontawesome": "0.3.2",
    "@fortawesome/free-solid-svg-icons": "6.1.0",
    "babel-eslint": "10.1.0",
    "broccoli-asset-rev": "3.0.0",
    "ember-cli": "4.2.0",
    "ember-cli-addon-docs": "ember-learn/ember-cli-addon-docs#667701d60650cf7af51611dbff9abf1879776421",
    "ember-cli-dependency-checker": "3.2.0",
    "ember-cli-deploy": "1.0.2",
    "ember-cli-deploy-build": "2.0.0",
    "ember-cli-deploy-git": "1.3.4",
    "ember-cli-deploy-git-ci": "1.0.1",
    "ember-cli-inject-live-reload": "2.1.0",
    "ember-cli-sri": "2.1.1",
    "ember-cli-terser": "4.0.2",
    "ember-cli-test-loader": "3.0.0",
    "ember-concurrency": "2.2.1",
    "ember-data": "4.2.0",
    "ember-disable-prototype-extensions": "1.1.3",
    "ember-load-initializers": "2.1.2",
    "ember-qunit": "5.1.5",
    "ember-resolver": "8.0.3",
    "ember-source": "4.2.0",
    "ember-source-channel-url": "3.0.0",
    "ember-template-lint": "4.3.0",
    "ember-template-lint-plugin-prettier": "4.0.0",
    "ember-try": "2.0.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-ember": "10.5.9",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-qunit": "7.2.0",
    "husky": "7.0.4",
    "lint-staged": "12.3.7",
    "loader.js": "4.7.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.6.1",
    "qunit": "2.18.0",
    "qunit-dom": "2.0.0",
    "webpack": "5.70.0"
  },
  "engines": {
    "node": "12.* || 14.* || >= 16"
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "configPath": "tests/dummy/config",
    "demoURL": "https://docs.adfinis.com/ember-validated-form"
  },
  "release": {
    "extends": "@adfinis-sygroup/semantic-release-config"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.hbs": "ember-template-lint --fix",
    "*.{scss,graphql,json,md,yml}": "prettier --write"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
