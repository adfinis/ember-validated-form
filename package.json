{
  "name": "ember-validated-form",
  "version": "7.0.1",
  "description": "Easily create forms with client-side validations",
  "keywords": [
    "ember-addon",
    "forms",
    "form validation",
    "validation messages"
  ],
  "repository": "https://github.com/adfinis/ember-validated-form",
  "license": "MIT",
  "author": "Adfinis AG <info@adfinis.com>",
  "directories": {
    "test": "tests"
  },
  "homepage": "https://adfinis.github.io/ember-validated-form",
  "bugs": {
    "url": "https://github.com/adfinis/ember-validated-form/issues"
  },
  "scripts": {
    "build": "ember build --environment=production",
    "lint": "concurrently \"npm:lint:*(!fix)\" --names \"lint:\"",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:css:fix": "concurrently \"npm:lint:css -- --fix\"",
    "lint:fix": "concurrently \"npm:lint:*:fix\" --names \"fix:\"",
    "lint:hbs": "ember-template-lint .",
    "lint:hbs:fix": "ember-template-lint . --fix",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "start": "ember serve",
    "test": "concurrently \"npm:lint\" \"npm:test:*\" --names \"lint,test:\"",
    "test:ember": "ember test",
    "test:ember-compatibility": "ember try:each",
    "prepare": "husky install"
  },
  "dependencies": {
    "@babel/core": "^7.24.0",
    "@embroider/macros": "^1.15.0",
    "@embroider/util": "^1.13.0",
    "@glimmer/component": "^1.1.2",
    "@glimmer/tracking": "^1.1.2",
    "ember-changeset": "^4.1.2",
    "ember-changeset-validations": "^4.1.1",
    "ember-cli-babel": "^8.2.0",
    "ember-cli-htmlbars": "^6.3.0",
    "ember-truth-helpers": "^3.1.0"
  },
  "devDependencies": {
    "@adfinis/eslint-config": "2.1.1",
    "@adfinis/semantic-release-config": "4.1.0",
    "@babel/eslint-parser": "7.23.10",
    "@babel/plugin-proposal-decorators": "7.24.0",
    "@ember/optional-features": "2.1.0",
    "@ember/string": "3.1.1",
    "@ember/test-helpers": "3.3.0",
    "@embroider/test-setup": "3.0.3",
    "@fortawesome/ember-fontawesome": "2.0.0",
    "@fortawesome/fontawesome-svg-core": "6.5.1",
    "@fortawesome/free-solid-svg-icons": "6.5.1",
    "broccoli-asset-rev": "3.0.0",
    "concurrently": "8.2.2",
    "ember-auto-import": "2.7.2",
    "ember-cli": "5.7.0",
    "ember-cli-addon-docs": "7.0.1",
    "ember-cli-clean-css": "3.0.0",
    "ember-cli-dependency-checker": "3.3.2",
    "ember-cli-deploy": "2.0.0",
    "ember-cli-deploy-build": "3.0.0",
    "ember-cli-deploy-git": "1.3.4",
    "ember-cli-deploy-git-ci": "1.0.1",
    "ember-cli-inject-live-reload": "2.1.0",
    "ember-cli-sri": "2.1.1",
    "ember-cli-terser": "4.0.2",
    "ember-cli-test-loader": "3.1.0",
    "ember-concurrency": "4.0.1",
    "ember-data": "5.3.3",
    "ember-flatpickr": "7.1.0",
    "ember-load-initializers": "2.1.2",
    "ember-qunit": "8.0.2",
    "ember-resolver": "11.0.1",
    "ember-source": "5.7.0",
    "ember-source-channel-url": "3.0.0",
    "ember-template-lint": "5.13.0",
    "ember-template-lint-plugin-prettier": "5.0.0",
    "ember-try": "3.0.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-ember": "12.0.2",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-n": "16.6.2",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-qunit": "8.1.1",
    "flatpickr": "4.6.13",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "loader.js": "4.7.0",
    "prettier": "3.2.5",
    "qunit": "2.20.1",
    "qunit-dom": "3.0.0",
    "semantic-release": "23.0.5",
    "stylelint": "16.2.1",
    "stylelint-config-standard": "36.0.0",
    "stylelint-prettier": "5.0.0",
    "webpack": "5.90.3"
  },
  "peerDependencies": {
    "ember-source": ">= 4.0.0"
  },
  "packageManager": "pnpm@8.11.0",
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "ember-source": "^5.0.0"
      }
    }
  },
  "engines": {
    "node": ">= 18"
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "configPath": "tests/dummy/config",
    "demoURL": "https://adfinis.github.io/ember-validated-form"
  },
  "release": {
    "extends": "@adfinis/semantic-release-config"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.hbs": "ember-template-lint --fix",
    "*.css": "stylelint --fix",
    "*.{json,md,yml}": "prettier --write"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
