{
  "name": "ember-validated-form",
  "version": "7.0.1",
  "description": "Easily create forms with client-side validations",
  "keywords": [
    "ember-addon",
    "forms",
    "form validation",
    "validation messages"
  ],
  "repository": "https://github.com/adfinis/ember-validated-form",
  "license": "MIT",
  "author": "Adfinis AG <info@adfinis.com>",
  "directories": {
    "test": "tests"
  },
  "homepage": "https://adfinis.github.io/ember-validated-form",
  "bugs": {
    "url": "https://github.com/adfinis/ember-validated-form/issues"
  },
  "scripts": {
    "build": "ember build --environment=production",
    "format": "prettier . --cache --write",
    "lint": "concurrently \"pnpm:lint:*(!fix)\" --names \"lint:\" --prefixColors auto",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:css:fix": "concurrently \"pnpm:lint:css -- --fix\"",
    "lint:fix": "concurrently \"pnpm:lint:*:fix\" --names \"fix:\" --prefixColors auto && pnpm format",
    "lint:format": "prettier . --cache --check",
    "lint:hbs": "ember-template-lint .",
    "lint:hbs:fix": "ember-template-lint . --fix",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "start": "ember serve",
    "test": "concurrently \"pnpm:lint\" \"pnpm:test:*\" --names \"lint,test:\" --prefixColors auto",
    "test:ember": "ember test",
    "test:ember-compatibility": "ember try:each",
    "prepare": "husky"
  },
  "dependencies": {
    "@babel/core": "^7.24.6",
    "@embroider/macros": "^1.16.1",
    "@embroider/util": "^1.13.0",
    "@glimmer/component": "^1.1.2",
    "@glimmer/tracking": "^1.1.2",
    "ember-changeset": "^4.1.2",
    "ember-changeset-validations": "^4.1.1",
    "ember-cli-babel": "^8.2.0",
    "ember-cli-htmlbars": "^6.3.0",
    "ember-template-imports": "^4.3.0",
    "ember-truth-helpers": "^3.1.0"
  },
  "devDependencies": {
    "@adfinis/eslint-config": "3.0.2",
    "@adfinis/semantic-release-config": "5.0.0",
    "@babel/eslint-parser": "7.28.4",
    "@babel/plugin-proposal-decorators": "7.28.0",
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@ember/optional-features": "2.2.0",
    "@ember/string": "3.1.1",
    "@ember/test-helpers": "4.0.4",
    "@embroider/test-setup": "4.0.0",
    "@eslint/js": "9.36.0",
    "@fortawesome/ember-fontawesome": "3.1.0",
    "@fortawesome/fontawesome-svg-core": "7.0.1",
    "@fortawesome/free-solid-svg-icons": "7.0.1",
    "broccoli-asset-rev": "3.0.0",
    "concurrently": "9.2.1",
    "ember-auto-import": "2.11.0",
    "ember-cli": "6.7.0",
    "ember-cli-addon-docs": "8.0.8",
    "ember-cli-clean-css": "3.0.0",
    "ember-cli-dependency-checker": "3.3.3",
    "ember-cli-deploy": "2.0.0",
    "ember-cli-deploy-build": "3.0.0",
    "ember-cli-deploy-git": "1.3.4",
    "ember-cli-deploy-git-ci": "1.0.1",
    "ember-cli-deprecation-workflow": "3.4.0",
    "ember-cli-inject-live-reload": "2.1.0",
    "ember-cli-sri": "2.1.1",
    "ember-cli-terser": "4.0.2",
    "ember-cli-test-loader": "3.1.0",
    "ember-concurrency": "4.0.6",
    "ember-data": "5.7.0",
    "ember-flatpickr": "8.0.1",
    "ember-load-initializers": "3.0.1",
    "ember-qunit": "9.0.4",
    "ember-resolver": "13.1.1",
    "ember-source": "6.7.0",
    "ember-source-channel-url": "3.0.0",
    "ember-template-lint": "7.9.3",
    "ember-template-lint-plugin-prettier": "5.0.0",
    "ember-try": "4.0.0",
    "eslint": "9.36.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-ember": "12.7.4",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-n": "17.23.1",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-qunit": "8.2.5",
    "flatpickr": "4.6.13",
    "globals": "16.4.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.1",
    "loader.js": "4.7.0",
    "prettier": "3.6.2",
    "prettier-plugin-ember-template-tag": "2.1.0",
    "qunit": "2.24.1",
    "qunit-dom": "3.5.0",
    "semantic-release": "24.2.9",
    "stylelint": "16.24.0",
    "stylelint-config-standard": "39.0.0",
    "stylelint-prettier": "5.0.3",
    "webpack": "5.101.3"
  },
  "peerDependencies": {
    "ember-source": ">= 4.0.0"
  },
  "packageManager": "pnpm@9.15.3",
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "ember-source": "^5.0.0"
      }
    }
  },
  "engines": {
    "node": ">= 20.11"
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "configPath": "tests/dummy/config",
    "demoURL": "https://adfinis.github.io/ember-validated-form"
  },
  "release": {
    "extends": "@adfinis/semantic-release-config"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.hbs": "ember-template-lint --fix",
    "*.css": "stylelint --fix",
    "*.{json,md,yml}": "prettier --write"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
